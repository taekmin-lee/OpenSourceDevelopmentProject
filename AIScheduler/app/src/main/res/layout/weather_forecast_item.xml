<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/datetime_text"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="30일 오후 12시"
        android:textAppearance="?attr/textAppearanceCaption" />

    <TextView
        android:id="@+id/temperature_text"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="36.5℃"
        android:textAppearance="?attr/textAppearanceBody2" />

    <ImageView
        android:id="@+id/sky_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/db01" />

    <TextView
        android:id="@+id/sky_text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="맑음"
        android:textAppearance="?attr/textAppearanceBody2" />

    <ImageView
        android:id="@+id/precipitation_image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_umbrella_solid"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/precipitation_text"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="90%"
        android:textAppearance="?attr/textAppearanceBody2"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        app:srcCompat="@drawable/ic_wind_solid"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/wind_text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="13mph"
        android:textAppearance="?attr/textAppearanceBody2" />

</LinearLayout>
